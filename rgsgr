<script>
  let products = [
    { name: '–ù–ê–ò–ú–ï–ù–û–í–ê–ù–ò–ï', price: 12345, quantity: 1 },
    { name: '–ù–ê–ò–ú–ï–ù–û–í–ê–ù–ò–ï', price: 12345, quantity: 1 },
    { name: '–ù–ê–ò–ú–ï–ù–û–í–ê–ù–ò–ï', price: 12345, quantity: 1 },
    { name: '–ù–ê–ò–ú–ï–ù–û–í–ê–ù–ò–ï', price: 12345, quantity: 1 },
    { name: '–ù–ê–ò–ú–ï–ù–û–í–ê–ù–ò–ï', price: 12345, quantity: 1 },
    { name: '–ù–ê–ò–ú–ï–ù–û–í–ê–ù–ò–ï', price: 12345, quantity: 1 },
  ];

  let discount = 0;
  let promoUsed = false;

  function renderProducts() {
    const list = document.getElementById('productList');
    list.innerHTML = '';
    products.forEach((product, index) => {
      list.innerHTML += 
        <div class="product">
          <span>${product.name}</span>
          <span>${product.price}‚ÇΩ</span>
          <div class="qty-control">
            <button class="qty-btn" onclick="changeQty(${index}, -1)">‚àí</button>
            <span>${product.quantity}</span>
            <button class="qty-btn" onclick="changeQty(${index}, 1)">+</button>
          </div>
          <button class="remove-btn" onclick="removeProduct(${index})">–£–¥–∞–ª–∏—Ç—å</button>
        </div>
      ;
    });
    updateTotal();
  }

  function changeQty(index, delta) {
    products[index].quantity += delta;
    if (products[index].quantity < 1) {
      products[index].quantity = 1;
    }
    updateTotal();
    renderProducts();
  }

  function removeProduct(index) {
    products.splice(index, 1);
    updateTotal();
    renderProducts();
  }

., [08.05.2025 20:50]
function updateTotal() {
    const totalRaw = products.reduce((sum, item) => sum + item.price * item.quantity, 0);
    const totalDiscount = promoUsed ? Math.floor(totalRaw * 0.2) : 0;
    discount = totalDiscount;
    document.getElementById('total').innerText = (totalRaw - discount) + '‚ÇΩ';
    document.getElementById('discount').innerText = discount + '‚ÇΩ';
  }

  function applyPromo() {
    const input = document.getElementById('promoInput').value.trim();
    if (input === 'ARB2025' && !promoUsed) {
      promoUsed = true;
      updateTotal();
      alert('–ü—Ä–æ–º–æ–∫–æ–¥ –ø—Ä–∏–º–µ–Ω—ë–Ω!');
    } else if (promoUsed) {
      alert('–ü—Ä–æ–º–æ–∫–æ–¥ —É–∂–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω.');
    } else {
      alert('–ù–µ–≤–µ—Ä–Ω—ã–π –ø—Ä–æ–º–æ–∫–æ–¥.');
    }
  }

  function checkout() {
    const totalFinal = products.reduce((sum, p) => sum + p.price * p.quantity, 0) - discount;
    alert('–ü–µ—Ä–µ—Ö–æ–¥ –∫ –æ–ø–ª–∞—Ç–µ. –ò—Ç–æ–≥–æ–≤–∞—è —Å—É–º–º–∞: ' + totalFinal + '‚ÇΩ');
  }

  renderProducts();
</script>

